# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/book_sharing

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External APIs
OPENLIBRARY_BASE_URL=https://openlibrary.org
GOOGLE_BOOKS_API_KEY=

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL_SECONDS=21600

# Application
DEBUG=True
ENVIRONMENT=development
PREFER_ALEMBIC_DB_URL=True

# File Uploads
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_PER_MINUTE=30
AUTH_RATE_LIMIT_PER_MINUTE=5
UPLOAD_RATE_LIMIT_PER_MINUTE=10
SEARCH_RATE_LIMIT_PER_MINUTE=30

# Logging
LOG_LEVEL=INFO
ENABLE_FILE_LOGGING=True

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Email/SMTP Configuration (Optional)
# Set ENABLE_EMAIL_NOTIFICATIONS=True to enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=False

# Gmail example:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=your-email@gmail.com
# SMTP_FROM_NAME=Book Sharing App
# SMTP_USE_TLS=True

# Outlook/Hotmail example:
# SMTP_HOST=smtp-mail.outlook.com
# SMTP_PORT=587
# SMTP_USER=your-email@outlook.com
# SMTP_PASSWORD=your-password
# SMTP_FROM_EMAIL=your-email@outlook.com
# SMTP_FROM_NAME=Book Sharing App
# SMTP_USE_TLS=True

